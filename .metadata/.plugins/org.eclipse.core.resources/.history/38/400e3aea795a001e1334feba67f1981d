package view;
import javax.swing.*;
import java.awt.*;
public class TabMenu extends JTabbedPane {
	private JPanel welcome, profileManagement,employeManagement,holidayManagement;
	public TabMenu() {
		super(JTabbedPane.TOP);
		welcome = new JPanel();
		profileManagement = new JPanel();
		employeManagement = new JPanel();
		holidayManagement = new JPanel();
		add("Welcome",welcome);
		add("Profiles/Holidays Management",profileManagement);
		add("Employees Management",employeManagement);
		add("Holiday Management",holidayManagement);
	}
}
